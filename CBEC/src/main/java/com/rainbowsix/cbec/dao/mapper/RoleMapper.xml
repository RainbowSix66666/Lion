<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rainbowsix.cbec.dao.IRoleDao">

	<insert id="create" parameterType="Role">
		insert into user_role (roleId, roleName, detial) values 
		(ROLE_ID_SQ.nextval, #{name}, #{detial})
	</insert>
	
	<update id="update" parameterType="Role">
		update user_role set roleName = #{name}, menuid = #{menuid}, detial = #{detial}
		where roleid = #{id}
	</update>
	
	<update id="setMenuId" parameterType="Role"></update>
	<delete id="delete" parameterType="Role"></delete>
	<select id="selectByRoleName" parameterType="string" resultType="Role"></select>
	<select id="selectByRoleId" parameterType="int" resultType="Role"></select>
	<select id="selectAll" resultType="Role"></select>
	
</mapper>